cd /main-lab/projects

cat > Antunes-Lab.code-workspace <<'JSON'
{
  "folders": [
    { "path": "ansible" },
    { "path": "aws" },             // change to "awx" if that's what you meant
    { "path": "linux-scripts" },
    { "path": "others" },
    { "path": "powershell" },
    { "path": "python" }
  ],
  "settings": {
    "python.defaultInterpreterPath": "/main-lab/projects/.venvs/projects/bin/python",
    "terminal.integrated.cwd": "/main-lab/projects"
  }
}
JSON

# Update repo (no sudo)
git add Antunes-Lab.code-workspace
git commit -m "Workspace: show only ansible, aws, linux-scripts, others, powershell, python"
git push

